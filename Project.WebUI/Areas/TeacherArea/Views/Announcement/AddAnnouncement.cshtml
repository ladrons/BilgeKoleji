@model AnnouncementVM

@{
    ViewBag.Title = "AddAnnouncement";
    Layout = "~/Areas/TeacherArea/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container" id="flex">
        <div id="main">

            <hr />

            <center><h4>Duyuru İşlemleri</h4></center>

            <div id="second">
                <div class="col-sm-12">
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-2"> Duyuru Başlığı</label>
                            <hr />
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Announcement.Title, new { @class = "form-control genislik"})
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="col-sm-2"> Duyuru İçeriği</label>
                            <hr />
                            <div class="col-sm-10">
                                @Html.TextAreaFor(x => x.Announcement.Description, new { @class = "form-control areagenislik"})
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label>Duyuru @Model.Teacher.Firstname @Model.Teacher.Lastname İsimli öğretmen tarafından yayınlandı olarak gözükecektir.</label>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="col-sm-2"> </label>
                            <div class="col-sm-10" style="display:flex">
                                <button class="btn btn-success"> Duyuruyu Yayınla</button>
                            </div>
                        </div>

                        <br />

                    </div>
                </div>
            </div>
        </div>
    </div>
}


<style>
    div {
    }

        div#main {
            background-color: aliceblue;
            margin-top: 10px;
            width: auto;
            height: initial;
        }

        div#second {
            margin-left: 35px;
            margin-right: 35px;
            margin-bottom: 10px;
        }

        div#third {
            width: auto;
            height: 500px;
        }

    strong {
        color: red;
    }

    .genislik {
        width: 300px;
    }

    .areagenislik{
        width: 1227px;
        height: 100px;
    }
</style>

