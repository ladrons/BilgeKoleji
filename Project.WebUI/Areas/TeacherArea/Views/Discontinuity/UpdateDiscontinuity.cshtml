@model DiscontinuityVM

@{
    ViewBag.Title = "UpdateDiscontinuity";
    Layout = "~/Areas/TeacherArea/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Absenteeism.ID)
    @Html.HiddenFor(x => x.Student.ID)

    <div class="container" id="flex">
        <div id="main">

            <hr />

            <center><h4>Devamsızlık İşlemleri</h4></center>

            <div id="second">
                <div class="col-sm-12">
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-2"> Öğrenci Adı</label>
                            <hr />
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Student.Firstname, new { @class = "form-control genislik", @disabled = "disabled" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="col-sm-2"> Öğrenci Soyadı</label>
                            <hr />
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Student.Lastname, new { @class = "form-control genislik", @disabled = "disabled" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="col-sm-2"> Okul Numarası</label>
                            <hr />
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Student.SchoolNumber, new { @class = "form-control genislik", @disabled = "disabled" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="col-sm-2"> Devamsızlık Açıklaması</label>
                            <hr />
                            <div class="col-sm-10">
                                @Html.TextAreaFor(x => x.Absenteeism.Description, new { @class = "form-control areaGenislik", @disabled = "disabled" })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="col-sm-2">Devamsızlık Başlangıç Tarihi</label>
                            <hr />
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.DiscontinuityDTO.StartingDate, new { @type = "date", @Value = Model.DiscontinuityDTO.StartingDate.ToString(), @class = "form-control genislik" })
                                <strong style="margin-top: 8px;">Eski Başlangıç Tarihi: @Model.Absenteeism.StartingDate.ToShortDateString()</strong>
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="col-sm-2">Devamsızlık Bitiş Tarihi</label>
                            <hr />
                            <div class="col-sm-10" style="padding: 5px">
                                @Html.TextBoxFor(x => x.DiscontinuityDTO.EndingDate, new { @type = "date", @Value = Model.DiscontinuityDTO.EndingDate.ToString(), @class = "form-control genislik" })
                                <strong style="margin-top: 8px;">Eski Bitiş Tarihi: @Model.Absenteeism.EndingDate.ToShortDateString()</strong>
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <label class="col-sm-2">Devamsızlık Türü Seçiniz</label>
                            <hr />
                            <div class="col-sm-10" style="display:flex">
                                <label style="padding:10px">Özürsüz Devamsızlık</label>
                                <div style="padding:10px">@Html.RadioButtonFor(x => x.DiscontinuityDTO.ReasonForAbsenteeism, "UnexcusedAbsences")</div>

                                <label style="padding:10px">Raporlu</label>
                                <div style="padding:10px">@Html.RadioButtonFor(x => x.DiscontinuityDTO.ReasonForAbsenteeism, "OnMedicalLeave")</div>

                                <label style="padding:10px">Nöbetçi Öğrenci</label>
                                <div style="padding:10px">@Html.RadioButtonFor(x => x.DiscontinuityDTO.ReasonForAbsenteeism, "SentryStudent")</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2"> </label>
                            <div class="col-sm-10" style="display:flex">
                                <button class="btn btn-success"> Devamsızlık Bilgisini Güncelle</button>
                                <strong style="padding: 5px">@TempData["WrongDate"]</strong>
                            </div>
                        </div>

                        <br />

                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    div {
    }

        div#main {
            background-color: aliceblue;
            margin-top: 10px;
            width: auto;
            height: initial;
        }

        div#second {
            margin-left: 35px;
            margin-right: 35px;
            margin-bottom: 10px;
        }

        div#third {
            width: auto;
            height: 500px;
        }

    strong {
        padding: 5px;
    }

    .genislik {
        width: 300px;
    }

    .areaGenislik {
        width: 800px;
        height: 80px;
    }
</style>

